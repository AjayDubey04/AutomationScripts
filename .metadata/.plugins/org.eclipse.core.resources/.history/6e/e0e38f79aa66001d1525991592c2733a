package Automate;

import org.openqa.selenium.By;
import org.openqa.selenium.chrome.ChromeDriver;

public class Fake_test {

	public static void main(String[] args) 
	{
	
		System.setProperty("webdriver.chrome.driver", "driver//chromedriver.exe");
		ChromeDriver driver=new ChromeDriver();
		driver.get("http://localhost:8888");
		String expected="User Name";
        String Actualuser=driver.findElement(By.xpath("(//td[@class='small'])[2]")).getText();
        boolean find=Actualuser.equalsIgnoreCase(expected);
       
       if(find==true) {
    	   System.out.println("Valid username");
       }
       else {
    	   System.out.println("invalid username");
       }
       String pass="Password";
      String actual= driver.findElement(By.xpath("(//td[@width='30%'])[2]")).getText();
      boolean findpass=actual.equalsIgnoreCase(pass);
      if( findpass==true){
    	 System.out.println("valid password");
     }
     else {
    	System.out.println("invalid password");
    }
       String module="Color Theme";
       String log= driver.findElement(By.xpath("(//td[@class='small'])[6]")).getText();
       System.out.println("Button value = "+log);
        boolean check=log.equalsIgnoreCase(module);
        if(check==true) {
        	System.out.println("Color Theme is apeard");
        }
        else {
        	System.out.println("Color Theme is  disapeard");
        }
        String langu="Language";
        String language=driver.findElement(By.xpath("(//td[@class='small'])[8]")).getText();
        
        if( language.equalsIgnoreCase(langu)){
        	System.out.println("Language text is apeard");
        }else {
        	System.out.println("language test is disapeard");
        }
        String button="Login";
        String take=driver.findElement(By.name("Login")).getAttribute("name");
        if(button.equalsIgnoreCase(take)) {
        	System.out.println("login button is visiable");
        }
        else {
        	System.out.println("login button is invisiable");
        }
        driver.findElement(By.name("user_name")).sendKeys("admin");
		driver.findElement(By.name("user_password")).sendKeys("admin");
		driver.findElement(By.name("Login")).click();
		String home=driver.findElement(By.xpath("//td[@class='moduleName']")).getText();
		System.out.println(home);
	}

}
